<center>
    <h4>Registrar</h4>
    <br>
</center>

<!-- Custom Tabs -->
<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">Usuário</a></li>
        <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">ONG</a></li>

    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">

            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <%= f.text_field :name,autofocus: true, hide_label: true, placeholder: 'Nome' %>

            <%= f.email_field :email, hide_label: true, placeholder: 'E-mail', style: 'border-radius:0px' %>

            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: 'Senha', style: 'border-radius:0px' %>
            <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: 'Confirmar Senha', style: 'border-radius:0px' %>

            <center>
                <%= f.submit "Registrar", class: 'btn btn-primary btn-block' %>
            </center>

            <% end %>


            <div class="social-auth-links text-center">
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Registrar
                    com Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Registrar com Google+</a>
            </div>
            <br>
            <center>
                <%= link_to 'Entrar', new_user_session_path %>
            </center>

        </div>
        <!-- /.tab-pane -->
        <div class="tab-pane" id="tab_2">
            <% resource.build_ong %>
            

            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <%= f.fields_for :ong do |builder| %>

            <%= builder.text_field :name, hide_label:true, placeholder: 'Nome' %>

            <%= builder.text_field :name_fantasy, hide_label: true, placeholder: 'Nome Fantasia' %>

           


            <%= builder.fields_for :address do |a| %>
            <%= a.text_field :zipcode, hide_label: true, placeholder: 'CEP', data: {provider: :zipcode} %>
            <%#= builder.collection_select(:ong, :city_id, City.all, :id, :name_with_initial) %>
            <%#= builder.collection_select(:ong, :city_id, City.all, :id, :name) hide_label: true, placeholder: 'Cidade', data: {provider: :city} %>
            <%= a.text_field :neighborhood, hide_label: true, placeholder: 'Bairro', data: {provider: :neighborhood}  %>
            <%= a.text_field :street, hide_label: true, placeholder: 'Rua', data: {provider: :street}  %>
            <%= a.number_field :number, hide_label: true, placeholder: 'Número' %>

            <%= a.text_field :complement, hide_label: true, placeholder: 'Complemento' %>
            <% end %>
            <% end %>
            <%#= f.text_field :name,autofocus: true, hide_label: true, placeholder: 'Nome' %>

            <%= f.email_field :email, hide_label: true, placeholder: 'E-mail', style: 'border-radius:0px' %>

            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: 'Senha', style: 'border-radius:0px' %>
            <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: 'Confirmar Senha', style: 'border-radius:0px' %>

            <center>
                <%= f.submit "Registrar", class: 'btn btn-primary btn-block' %>
            </center>

            <% end %>
            <div class="social-auth-links text-center">
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Registrar
                    com Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Registrar com Google+</a>
            </div>
            <br>
            <center>
                <%= link_to 'Entrar', new_user_session_path %>
            </center>

        </div>
        <!-- /.tab-pane -->


    </div>
    <!-- /.tab-content -->
</div>

